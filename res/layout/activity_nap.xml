<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NapActivity" >

    <ImageView
        android:id="@+id/catBed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:src="@drawable/catbed" />


    
    <ViewSwitcher 
        android:id="@+id/catViewSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
    </ViewSwitcher>
		
    <ImageView
        android:id="@+id/sleepingCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/catBed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:src="@drawable/catsleeping" />

    <ImageView
        android:id="@+id/happyCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/catBed"
        android:layout_marginTop="24dp"
        android:src="@drawable/happycat" />

    <ImageView
        android:id="@+id/droidIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sleepingCat"
        android:layout_alignTop="@+id/happyCat"
        android:layout_marginTop="68dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/catIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/droidIcon"
        android:layout_alignParentLeft="true"
        android:src="@drawable/caticon" />
    
</RelativeLayout>